#define OLED_RESET LED_BUILTIN
Adafruit_SSD1306 display(OLED_RESET);

#if (SSD1306_LCDHEIGHT != 64)
#error("Altura incorrecta, cambie en la libreria de Adafruit_SSD1306.h!");
#endif

void read_temp() {
display.clearDisplay();
display.setTextSize(1);
display.setTextColor(WHITE);
display.setCursor(0,10);
display.println("Monitor");
display.setCursor(0,32);
display.println("de Huerto");
display.setCursor(0,10);
display.clearDisplay();
delay(3000);
display.print("Humedad Suelo:");
display.println(analogRead(0));
display.println("Temperatura C:");
display.println(dht.readTemperature());
display.println("Humedad ambiente %:");
display.println(dht.readHumidity());
display.display();
Serial.println("Humedad Suelo:");
Serial.println(analogRead(0));
Serial.println("Temperatura");
Serial.println(dht.readTemperature());
Serial.println("Humedad");
Serial.println(dht.readHumidity());


}
void setup() {
Serial.begin(9600);   // inicializa monitor serie a 9600 bps
dht.begin();
display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
display.clearDisplay();
display.drawBitmap(0,0,logo,128,64,1);
display.display();
delay(2000);
}

void loop() {
read_temp();
}
