void humedadaire(); // Pantalla-3
void humedadsuelo();// Pantalla-4
void (*pages[])() = { logo, temperatura, humedadaire,humedadsuelo} ; //todas las pantallas

void setup() {  
  p = 0;
  Serial.begin(9600); //abre el monitor serial para mandar datos a la computadora
  dht.begin(); //inicializa el sensor 
  pinMode(0, INPUT); //declara el pin A0 como entrada de información
}

//Este loop simplemente dice la mecànica de ir mostrando pantalla por pantalla
void loop() {  
  u8g.firstPage();
  do {  
    (*pages[p])();
  } while( u8g.nextPage() );
  delay(1000); 
  p = p+1;
  if (p == 4)
    p=0;
}
  

